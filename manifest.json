{
    "manifest_version": 2,
  
    "name": "Work Follow All Extension",
    "description": "This extension will allow follow all actions on Work record feed items",
    "version": "1.0",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
  
    "page_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [
     "activeTab",
     "storage",
     "tabs",
     "declarativeContent"
     ]
  }