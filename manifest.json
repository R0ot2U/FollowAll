{
	"name": "Chatter Enhancement Suite",
	"version": "1.0",
	"manifest_version": 2,
	"content_security_policy": "script-src 'self' ; object-src 'self'",
	"description": "Enhance your chatter experience",
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Follow All",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icon.png",
		"32": "icon.png"
	},
	"permissions": [
		"contextMenus",
		"tabs",
		"activeTab",
		"cookies",
		"storage",
		"webNavigation",
		"https://*.my.salesforce.com/*",
		"https://*.lightning.force.com/*"
	],
	"background": {
		"scripts": [
			"jquery.js",
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.my.salesforce.com/*",
				"https://*.lightning.force.com/*"
			],
			"js": [
				"jquery.js",
				"content-script.js"
			]
		}
	],
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Alt+T",
				"mac": "Alt+T",
				"linux": "Alt+T"
			}
		}
	}
}